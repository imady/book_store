<!DOCTYPE html>
<html>
<head>
  <title>BookStore</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
	</head>
	<body>


	 <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div id="navbar" class="nav navbar-nav">
          <ul class="nav navbar-nav">
            <li> <%= link_to 'home', books_path%></li>
              <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Show <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li> <%= link_to 'Book', books_path %> </li>
                <li> <%= link_to 'Category', categories_path %> </li>
                <li> <%= link_to 'Author', authors_path %> </li>
                <li> <%= link_to 'Country', countries_path %> </li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->

		<div id="navbar" class="nav navbar-right">
          <ul class="nav navbar-nav">
              <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add New <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li> <%= link_to 'Book', new_book_path %> </li>
                <li> <%= link_to 'Category', new_category_path %> </li>
                <li> <%= link_to 'Author', new_author_path %> </li>
                <li> <%= link_to 'Country', new_country_path %> </li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->

      </div>
    </nav>

    <header>
      <div class="container"> <h1> The Book Store </h1></div>
    </header>

  <section>
      <div class="container">
      <div class="row">
          <div class="col-md-8">
            <%= yield %>
          </div>
          <div class="col-md-4">
                <%= render 'partials/sidebar' %>
          </div>
      </div>
      </div>
  </section>
  <footer>
    <div class="container">
      <p> Copyright &copy; 2018, All Rights Reserved </p>
    </div>
  </footer>

</body>

</html>



