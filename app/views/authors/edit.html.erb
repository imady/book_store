<h1>Authors#edit</h1>
<p>Find me in app/views/authors/edit.html.erb</p>
<h3> Author Edit </h3>
<%= flash[:notice] %> <br> <br>
	<%= form_for @author do |f| %>
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>

		<%= f.label :last_name %>
		<%= f.text_field :last_name %>

		<%= f.submit "Update", class:'btn btn-primary' %>
		<%= link_to "Cancel", authors_path, class:'btn btn-primary' %>

	<% end %>