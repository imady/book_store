<h1>Countries#index</h1>
<p>Find me in app/views/countries/index.html.erb</p>

<h3> Country List </h3>
	<table class="table table-striped">
		<th> S.No </th>
		<th> Name </th>
		<th> Action </th>
		<% @countries.each do |country| %>
		<tr> 
			<td> <%= country.id %> </td> 
		 	<td> <%= country.name %> </td>
		 	<td> <%= link_to "Edit", edit_country_path(country), class:'btn btn-primary' %> </td> 
		 	<td> <%= link_to "Delete", country_path(country), method: :delete, data:{confirm: 'Are You Sure?'}, class:'btn btn-primary' %>  </td> 
		 </tr>
		<% end %>
	</table>